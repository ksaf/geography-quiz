<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false"
        android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:color="#00000000"
                android:width="10dp"/>
            <corners android:radius="2dp" />
            <solid android:color="#84878c" />
        </shape>
    </item>
    <item android:state_enabled="false"
        android:state_focused="false">
        <shape android:shape="rectangle">
            <stroke android:color="#00000000"
                android:width="10dp"/>
            <corners android:radius="2dp" />
            <solid android:color="#bdc1c9" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:color="#00000000"
                android:width="10dp"/>
            <corners android:radius="2dp" />
            <solid android:color="#FFFFFe" />
            <stroke
                android:width="1dp"
                android:color="#dedee6" >
            </stroke>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="#00000000"
                android:width="10dp"/>
            <corners android:radius="2dp" />
            <solid android:color="#BB6C09" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#00000000"
                android:width="10dp"/>
            <corners android:radius="2dp" />
            <solid android:color="#ee9f3c" />
        </shape>
    </item>
</selector>